<form class="well span10">
<h1>Venues</h1>
<hr>
<% @venues.each do |venue| %>
<div class="row">
  <div class="span8">
    <div class="row">
      <div class="span8">
        <h4><strong><%= link_to venue.name, venue %></strong></h4>
      </div>
    </div>
    <div class="row">
      <div class="span2">
        <a href="#" class="thumbnail">
            <%= image_tag venue.avatar.thumb %>
        </a>
      </div>
      <div class="span6"> 
        <p><%= venue.about %></p>     
        <p class="btn btn-warning"><%= link_to 'Edit', edit_venue_path(venue) %></p>
      </div>
    </div>
    <div class="row">
      <div class="span8">
        <p></p>
        <p>
          <i class="icon-user"></i> by <a href="#"><%= venue.manager %></a>
          | <i class="icon-map-marker"></i> <%= venue.location %> 
          | <i class="icon-globe"></i> <%= venue.website %>
          | <i class="icon-tags"></i> Tags : 
          <a href="#"><span class="label label-info"><%= venue.tag_list %></span></a> 
        </p>
      </div>
    </div>
  </div>
</div>
<hr>
<% end %>

<br />

<div class='btn btn-success'><%= link_to 'Add New Venue', new_venue_path %></div>
</form>
