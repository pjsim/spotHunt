<form class="well span10">
<h1>Venues</h1>
<hr>
<% @venues.each do |venue| %>
<div class="row">
  <div class="span8">
    <div class="row">
      <div class="span8">
        <h4><strong><%= link_to venue.name, venue %></strong></h4>
      </div>
    </div>
    <div class="row">
      <div class="span2">
        <a href="#" class="thumbnail">
            <%= image_tag venue.avatar.thumb %>
        </a>
      </div>
      <div class="span6"> 
        <p><%= venue.about %></p>     
        <p><%= link_to 'Edit', edit_venue_path(venue), :class => "btn btn-warning" %>
        <%= link_to 'Delete', venue, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></p>
      </div>
    </div>
    <div class="row">
      <div class="span8">
        <p></p>
        <p>
          <i class="icon-user"></i> by <%= venue.manager %>
          | <i class="icon-map-marker"></i> <%= venue.address %> 
          | <i class="icon-globe"></i> <%= auto_link(venue.website, :all, :target => '_blank') %>
          | <i class="icon-tags"></i> Tags : 
          <span class="label label-info"><%= venue.tag_list %></span> 
        </p>
      </div>
    </div>
  </div>
</div>
<hr>
<% end %>
<br />
<div><%= link_to 'Add New Venue', new_venue_path, :class =>'btn btn-primary' %></div>
</form>