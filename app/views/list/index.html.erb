<div class="well span10">
<div class="row">
	<div class="span2">
		<ul style="list-style-type: none">
			<b>Venues</b>
			<li>All</li>
			<li>Bars</li>
			<li>Cafes</li>
			<li>Hotels</li>
			<li>Offices</li>
		</ul>
	</div>


	<div class="span5">
		<h3>Featured Venues</h3>
		<hr>
		<% @venues.each do |venue| %>
		<div class="row">
		  <div class="span8">
		    <div class="row">
		      <div class="span8">
		        <h4><strong><%= link_to venue.name, venue %></strong></h4>
		      </div>
		    </div>
		    <div class="row">
		      <div class="span2">
		        <a href="#" class="thumbnail">
		            <%= image_tag venue.avatar.thumb %>
		        </a>
		      </div>
		      <div class="span6"> 
		        <p><%= venue.about %></p>
		      </div>
		    </div>
		    <div class="row">
		      <div class="span8">
		        <p></p>
		        <p>
		          <i class="icon-user"></i> by <%= venue.manager %>
		          | <i class="icon-map-marker"></i> <%= venue.address %> 
		          | <i class="icon-globe"></i> <%= auto_link(venue.website, :all, :target => '_blank') %>
		          | <i class="icon-tags"></i> Tags : 
		          <a href="#"><span class="label label-info"><%= venue.tag_list %></span></a> 
		        </p>
		      </div>
		    </div>
		  </div>
		</div>
		<hr>
		<% end %>
	</div>
</div>